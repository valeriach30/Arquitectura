# http://editorconfig.org

# Root file for EditorConfig
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 2
max_line_length = 88
trim_trailing_whitespace = true

# YAML (configs, metadata)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# HTML
[*.html]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# JSON
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true
